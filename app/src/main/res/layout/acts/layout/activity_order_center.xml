<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jymj.zhglxt.ui.activity.me.order.OrderCenterActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_act_order_center_back"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_left_icon"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:text="订单中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/bt_actiive_hui"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <MultiAutoCompleteTextView
                android:textSize="13sp"
                android:layout_weight="1"
                android:background="@null"
                android:id="@+id/mactv_act_order_center_spss"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/search"
                android:paddingLeft="20dp"
                android:hint="请输入商品搜索"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/tv_act_order_center_delete"
                android:paddingRight="10dp"
                android:src="@drawable/error_center_x"
                android:layout_width="25dp"
                android:layout_height="15dp"/>
        </LinearLayout>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_act_order_center_ss"
            android:paddingRight="17dp"
            android:textColor="#CE4A41"
            android:paddingLeft="14dp"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_order_center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#F3F5FA"
        app:tabIndicatorColor="#CE4A41"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#CE4A41"
        app:tabTextColor="@color/black3"
        app:tabIndicatorFullWidth="false"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_order_center_zwdd"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/icon_dqzwdd"
            android:layout_width="172dp"
            android:layout_height="132dp"/>
        <TextView
            android:textColor="@color/black3"
            android:textSize="16sp"
            android:text="抱歉，当前暂无订单"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_act_order_center_qgg"
            android:layout_marginTop="17dp"
            android:textColor="#CE4A41"
            android:background="@drawable/line_background_round_red"
            android:paddingRight="16.5dp"
            android:paddingLeft="16.5dp"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp"
            android:text="去逛逛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/rlv_act_order_center_dllb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</LinearLayout>
