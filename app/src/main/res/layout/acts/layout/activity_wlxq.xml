<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jymj.zhglxt.ui.activity.me.WlxqActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_act_wlxc_back"
            android:src="@drawable/back_left_icon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/black3"
            android:layout_centerInParent="true"
            android:text="物流详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_act_wlxq_query"
        android:gravity="center"
        android:textSize="64sp"
        android:text="查询"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        app:umanoScrollableView="@id/slv_act_wlxq"
        sothree:umanoPanelHeight="235dp"
        sothree:umanoShadowHeight="4dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps2d.MapView
            android:id="@+id/map_act_wlxq"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.amap.api.maps2d.MapView>
        <ScrollView
            android:id="@+id/slv_act_wlxq"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/ic_launcher2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/tv_act_wlxq_kdgs"
                        android:layout_marginLeft="10dp"
                        android:text="顺丰快递："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_act_wlxq_kdbh"
                        android:text="413142583642725108"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_act_wlxq_copy"
                        android:layout_marginRight="15dp"
                        android:paddingRight="13dp"
                        android:paddingLeft="13dp"
                        android:paddingTop="4.5dp"
                        android:paddingBottom="4.5dp"
                        android:background="@drawable/gray_line_background"
                        android:text="复制"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_kdy"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="快递员："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_act_wlxq_kdy"
                        android:text="吕洁润"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_act_wlxq_phone"
                        android:layout_marginRight="15dp"
                        android:text="158106484852"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_shdz"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_act_wlxq_ddbh"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="订单编号：12699841066302208331"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_act_wlxq_shdz"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="收货地址：甘肃省临夏市电力机车厂宿舍121号"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingBottom="10dp"
                        android:id="@+id/rlv_act_wlxq_ddjd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="27dp"
                        android:layout_height="1.7dp"
                        android:background="#CE4A41"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="更多精选商品"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        />
                    <View
                        android:layout_width="27dp"
                        android:layout_height="1.7dp"
                        android:background="#CE4A41"/>


                </LinearLayout>
                <RelativeLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_act_wlxq_gdjxsp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>




            </LinearLayout>

        </ScrollView>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>



</LinearLayout>
