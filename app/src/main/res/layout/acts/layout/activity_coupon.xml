<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F5FA"
    tools:context="com.jymj.zhglxt.ui.activity.me.CouponActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_act_cou_pon"
            android:src="@drawable/back_left_icon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/black3"
            android:layout_centerInParent="true"
            android:text="优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
<!--    @android:color/transparent-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_act_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:tabIndicatorColor="#CE4A41"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#CE4A41"
        app:tabTextColor="@color/black3"
        app:tabIndicatorFullWidth="false"
        />
   <!-- app:tabMaxWidth="@dimen/dp_200"
    app:tabMinWidth="65dp"-->
    <!--<View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <EditText
            android:id="@+id/et_act_coupon_qsrdhm"
            android:paddingLeft="12dp"
            android:textSize="13sp"
            android:hint="请输入兑换码"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_act_coupon_dhan"
            android:textColor="#CE4A41"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="兑换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_act_coupon_yhq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_act_coupon_zwyhq"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/icon_yhq"
            android:layout_width="172dp"
            android:layout_height="124dp"/>
        <TextView
            android:layout_marginTop="13.5dp"
            android:text="抱歉，当前暂无可用优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_act_coupon_qlq"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="26dp"
            android:paddingLeft="26dp"
            android:textSize="16sp"
            android:background="@drawable/line_background_round_red"
            android:layout_marginTop="21dp"
            android:textColor="#CE4A41"
            android:text="去领取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
