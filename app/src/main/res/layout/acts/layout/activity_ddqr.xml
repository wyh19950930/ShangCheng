<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_act_ddqr"
    tools:context="com.jymj.zhglxt.ui.activity.shopping.DdqrActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_act_ddqr_back"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/back_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black3"
            android:layout_centerInParent="true"
            android:text="订单确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_act_ddqr_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_act_ddqr"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:background="#ffffff"
                        app:tabIndicatorColor="#CE4A41"
                        app:tabIndicatorHeight="2dp"
                        app:tabSelectedTextColor="#CE4A41"
                        app:tabTextColor="@color/black3"
                        app:tabIndicatorFullWidth="false">

                    </com.google.android.material.tabs.TabLayout>
                    
                    <LinearLayout
                        android:id="@+id/ll_act_ddqr_address_child"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_act_ddqr_adddz"
                            android:textSize="16sp"
                            android:textColor="#999999"
                            android:background="@drawable/shi_background_gray"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="+添加收货地址"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                        <LinearLayout
                            android:id="@+id/ll_act_ddqr_dz"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="90dp">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_margin="10dp"
                                    android:src="@drawable/icon_dz"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/tv_act_ddqr_name"
                                            android:textSize="16sp"
                                            android:textColor="@color/black3"
                                            android:text="xxx"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/tv_act_ddqr_phone"
                                            android:layout_marginLeft="10dp"
                                            android:textSize="12sp"
                                            android:textColor="@color/black3"
                                            android:text="158xxxx1234"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/tv_act_ddqr_mr"
                                            android:paddingBottom="2dp"
                                            android:paddingTop="2dp"
                                            android:paddingRight="10dp"
                                            android:paddingLeft="10dp"
                                            android:background="@drawable/shi_background_red"
                                            android:layout_marginLeft="10dp"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:text="默认"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>
                                    <TextView
                                        android:id="@+id/tv_act_ddqr_dz"
                                        android:textColor="#666666"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp"
                                        android:text="北京市xxx"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                                <TextView
                                    android:id="@+id/tv_act_ddqr_update"
                                    android:textColor="@color/black3"
                                    android:background="@drawable/gray_line_background"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="4dp"
                                    android:layout_gravity="center_vertical"
                                    android:paddingRight="23dp"
                                    android:paddingLeft="23dp"
                                    android:text="修改"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <TextView
                                android:layout_marginBottom="14dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginLeft="28dp"
                                android:textColor="#CE4A41"
                                android:text="请确认收货地址，如需更换，请点击右侧按钮更换"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:background="@drawable/cai_line"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="所购物品"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/ll_act_ddqr_sgwp_dan"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_act_ddqr_sgwp_img"
                            android:padding="10dp"
                            android:src="@drawable/icon_cnxh_ys"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_act_ddqr_sgwp_name"
                                    android:layout_weight="1"
                                    android:textColor="@color/black3"
                                    android:text="xxxxxxxxx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tv_act_ddqr_sgwp_price"
                                    android:textSize="13sp"
                                    android:textColor="#CE4A41"
                                    android:text="￥9.90"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_act_ddqr_sgwp_fen"
                                android:layout_marginTop="5dp"
                                android:text="xxx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_act_ddqr_sgwp_num"
                                android:gravity="end"
                                android:layout_marginTop="5dp"
                                android:text="× 1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_act_ddqr_det"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_act_ddqr_det_del"
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/bt_actiive_sl_delete"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:text="一"/>
                                <TextView
                                    android:id="@+id/tv_act_ddqr_det_num"
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/bt_actiive_sl"
                                    android:gravity="center"
                                    android:text="1"/>
                                <TextView
                                    android:id="@+id/tv_act_ddqr_det_add"
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/bt_actiive_sl_add"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:text="十"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_act_ddqr_sgwp_shuang"
                        android:minHeight="100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rlv_act_ddqr_sgwp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_act_ddqr_sgwp_price1"
                                android:gravity="end"
                                android:textColor="#CE4A41"
                                android:textSize="13sp"
                                android:text="￥49.90"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_act_ddqr_sgwp_num1"
                                android:gravity="end"
                                android:textSize="10sp"
                                android:text="共3件"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_act_ddqr_sgwp_nyf"
                                android:textColor="@color/black3"
                                android:gravity="end"
                                android:textSize="10sp"
                                android:text="(免运费)"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textColor="@color/black3"
                        android:layout_marginLeft="15dp"
                        android:text="优惠卡券"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ll_act_ddqr_yhpj"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_dsj_gray"
                        android:textColor="@color/black3"
                        android:layout_marginRight="15dp"
                        android:text="有可用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textColor="@color/black3"
                        android:layout_marginLeft="15dp"
                        android:text="备注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ll_act_ddqr_remark"
                        android:textSize="13sp"
                        android:gravity="end"
                        android:background="@null"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black3"
                        android:layout_marginRight="15dp"
                        android:hint="请填写您的要求"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textColor="@color/black3"
                        android:layout_marginLeft="15dp"
                        android:text="商品金额"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ll_act_ddqr_spje"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black3"
                        android:layout_marginRight="15dp"
                        android:text="￥9.90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/ll_act_ddqr_yf"
                        android:textColor="@color/black3"
                        android:layout_marginLeft="15dp"
                        android:text="运费(总重量:0.65kg)"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ll_act_ddqr_yfjg"
                        android:drawablePadding="5dp"
                        android:textColor="#CE4A41"
                        android:layout_marginRight="15dp"
                        android:text="￥5.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textColor="@color/black3"
                        android:layout_marginLeft="15dp"
                        android:text="优惠券"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ll_act_ddqr_yhj"
                        android:drawablePadding="5dp"
                        android:textColor="#CE4A41"
                        android:layout_marginRight="15dp"
                        android:text="-￥5.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:minHeight="100dp"
                    android:background="#F3F5FA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="合计:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ll_act_ddqr_total"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#CE4A41"
                android:text="￥4.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ll_act_ddqr_submit"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingRight="18dp"
                android:paddingLeft="18dp"
                android:background="@drawable/shi_background_yuan_red"
                android:textColor="@color/white"
                android:text="提交订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
