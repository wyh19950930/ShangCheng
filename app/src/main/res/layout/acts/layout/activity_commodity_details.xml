<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commodity_details_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jymj.zhglxt.ui.activity.shopping.CommodityDetailsActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_act_com_det_back"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_left_icon"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:text="商品详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_act_com_det_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/xm_tz_share_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner_commodity_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

            </com.youth.banner.Banner>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="15sp"
                    android:textColor="#F6321A"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_act_xm_tz_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="9.9"
                    android:textSize="22sp"
                    android:textColor="#F6321A"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_act_xm_tz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="黄山店油鸡蛋1斤实惠装【买一赠一】"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="月售31 丨仅剩3份"
                android:textSize="13sp"
                android:textColor="#666666"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#d8d8d8" />
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="黄山店油鸡蛋1斤实惠装【买一赠一】，1件"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#d8d8d8" />
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送至"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="湖北省宜城市平南路安居苑122号"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价（112）"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="查看全部"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#999999"
                    />

            </LinearLayout>

            <WebView
                android:id="@+id/web_act_com_det_spxq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>

            <!--卡产品包含的商品列表-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlt_act_com_det_kcp"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_act_com_det_kcp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="27dp"
                    android:layout_height="1.7dp"
                    android:background="#CE4A41"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="猜你喜欢"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="27dp"
                    android:layout_height="1.7dp"
                    android:background="#CE4A41"/>
            </LinearLayout>

            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_act_com_det_cnxh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="客服"
            android:textSize="10sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/sqxq_kf_icon"/>
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="店铺"
            android:textSize="10sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/sqxq_dp_icon"/>
        <TextView
            android:id="@+id/tv_act_commodity_details_jump_gwc"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="购物车"
            android:textSize="10sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/sqxq_gwc_icon"/>

        <TextView
            android:id="@+id/tv_act_commodity_details_gwc"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bt_actiive_gwc_kuang"
            android:text="加入购物车"
            android:textColor="#CE4A41"/>

        <TextView
            android:id="@+id/tv_act_commodity_details_ljgm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bt_actiive_ljgm_kuang"
            android:text="立即购买"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>
