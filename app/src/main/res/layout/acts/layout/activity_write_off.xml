<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5fa"
    android:orientation="vertical"
    tools:context="com.jymj.zhglxt.ui.activity.me.order.WriteOffActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_act_write_off_back"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_left_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:text="商品核销"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="商品核销码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd"/>

        <ImageView
            android:id="@+id/iv_act_write_off_ewm"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_act_write_off_hxm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="核销码：38824520346381"
            android:textColor="#333333"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="核销商品"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_act_write_off_img"
                android:padding="10dp"
                android:src="@drawable/icon_cnxh_ys"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_act_write_off_name"
                        android:layout_weight="1"
                        android:textColor="#333333"
                        android:text="黄山店自产油鸡蛋"
                        android:textSize="13sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_act_write_off_num"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:text="× 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_act_write_off_lx"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:text="截至核销日期"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_act_write_off_time"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:text="永久有效"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_act_write_off_ka_name"
                    android:layout_marginTop="5dp"
                    android:text="黄山店有机蔬菜套餐组合卡"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="核销地点"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:src="@drawable/back_right_icon"
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"/>
        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f3f5fa"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线客服"
                    android:textColor="#333333"
                    android:drawableLeft="@drawable/red_kf_icon"
                    android:drawablePadding="5dp"/>
            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="35dp"
                android:background="#D8D8D8"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拨打电话"
                    android:textColor="#333333"
                    android:drawableLeft="@drawable/red_kf_icon"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
