<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jymj.zhglxt.ui.activity.homepage.ShouSearchActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_shou_search_back"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:src="@drawable/back_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bt_actiive_hui"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <MultiAutoCompleteTextView
                android:textSize="13sp"
                android:layout_weight="1"
                android:background="@null"
                android:id="@+id/mactv_act_shou_search_spss"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/search"
                android:paddingLeft="20dp"
                android:hint="请输入商品搜索"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/tv_act_shou_search_delete"
                android:paddingRight="10dp"
                android:src="@drawable/error_center_x"
                android:layout_width="25dp"
                android:layout_height="15dp"/>
        </LinearLayout>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_act_shou_search_ss"
            android:paddingRight="17dp"
            android:textColor="#CE4A41"
            android:paddingLeft="14dp"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
   <!-- <TextView
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:id="@+id/ll_act_shou_search_lsjl"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="历史记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_act_shou_search_delete"
                android:padding="3dp"
                android:src="@drawable/delete"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>


        <com.jymj.zhglxt.widget.zdybj.TagCloudLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tcl_act_shou_search_lsjl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="推荐搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.jymj.zhglxt.widget.zdybj.TagCloudLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tcl_act_shou_search_tjss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="猜你喜欢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_act_shou_serach_cnxh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_act_shou_search_cplb"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:layout_marginTop="5dp"
            android:id="@+id/tlb_act_shou_serach"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F3F5FA"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#CE4A41">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="综合"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="销量"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabGravity="center"
                android:layout="@layout/custom_indicator"
                android:layout_gravity="center_vertical"
                android:icon="@drawable/icon_back_down"
                android:text="价格"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="距离"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="评分"/>
        </com.google.android.material.tabs.TabLayout>
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_act_shou_search_cplb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_act_shou_search_zwcxjg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_act_shou_serach_zwcxjg"
            android:src="@drawable/zwcxjg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_act_shou_serach_zwcxjg"
            android:layout_marginTop="10dp"
            android:text="暂无查询结果"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_act_shou_search_wlcxwt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_act_shou_serach_wlcxwt"
            android:src="@drawable/wlcxwt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_act_shou_serach_wlcxwt"
            android:layout_marginTop="10dp"
            android:text="网络出现点问题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
