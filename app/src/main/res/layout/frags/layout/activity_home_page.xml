<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_act_me"
    tools:context=".MeActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_act_me_back"
            android:src="@drawable/back_left_icon"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:text="首页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <include layout="@layout/include_homepage_default"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_act_home_page"
        android:textSize="64sp"
        android:gravity="center"
        android:text="首页"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_act_home_page1"
        android:textSize="64sp"
        android:gravity="center"
        android:text="商品分类"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_act_home_page2"
        android:textSize="64sp"
        android:gravity="center"
        android:text="订单确认"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>