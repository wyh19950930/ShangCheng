<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_act_me">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_act_me_back"
            android:src="@drawable/back_left_icon"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:text="个人中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/rl_act_me_personal_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:id="@+id/iv_act_me_head"
                        android:src="@drawable/head_portrait_home"
                        android:layout_margin="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/iv_act_me_head"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:text="阳光彩虹小白马"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@id/iv_act_me_head"
                        android:textSize="11sp"
                        android:textColor="#ffffff"
                        android:text="成长值 0"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="0.5dp"
                        android:paddingBottom="0.5dp"
                        android:background="@drawable/bt_actiive_ce4a41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/me_setting_icon"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="我的钱包"
                            android:textSize="13sp"
                            android:textColor="#666666"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="卡券/码"
                            android:textSize="13sp"
                            android:textColor="#666666"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/act_me_coupon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="优惠券"
                            android:textSize="13sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="我的积分"
                            android:textSize="13sp"
                            android:textColor="#666666"/>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/me_bdsjh_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的订单"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_act_me_ckqb"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="查看全部"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:src="@drawable/back_right_icon"
                        android:layout_marginRight="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_act_me_dfk"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="待付款"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/me_dfk_icon"
                        android:drawablePadding="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_act_me_dfh"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="待发货"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/me_dfh_icon"
                        android:drawablePadding="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_act_me_dsh"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="待收货"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/me_dsh_icon"
                        android:drawablePadding="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_act_me_ywc"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="已完成"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/me_ywc_icon"
                        android:drawablePadding="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_act_me_tksh"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="退款/售后"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/me_tksh_icon"
                        android:drawablePadding="3dp"
                        />
                </LinearLayout>

                <View
                    android:background="#F3F5FA"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


                <LinearLayout
                    android:id="@+id/ll_frag_me_commodity_write_off"
                    android:background="@drawable/ripple_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/me_sphx_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:text="商品核销"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="15dp"
                        android:src="@drawable/back_right_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:background="#F3F5FA"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_xxzx_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="消息中心"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_act_me_wcls"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:id="@+id/ll_frag_me_dzgl"
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_dzgl_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="地址管理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="14dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_kfzx_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="客服中心"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="14dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_cjwt_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="常见问题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="14dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_gy_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="关于"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="14dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/but_act_me_out"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:textSize="20sp"
                android:text="退出系统"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>