<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_item_order_center_time"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="2000-00-00 00:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_order_center_stutas"
                android:textSize="13sp"
                android:textColor="#CE4A41"
                android:text="等待买家付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="14dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_item_order_center_dan"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_item_order_center_img"
                    android:padding="10dp"
                    android:src="@drawable/icon_cnxh_ys"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_item_order_center_name"
                            android:layout_weight="1"
                            android:textColor="@color/black3"
                            android:text="黄山店自产油鸡蛋"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_item_order_center_price"
                            android:textSize="13sp"
                            android:textColor="#CE4A41"
                            android:text="￥9.90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_item_order_center_fen"
                        android:layout_marginTop="5dp"
                        android:text="300g/1份"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_item_order_center_num"
                        android:gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="× 1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_order_center_shuang"
                android:descendantFocusability="blocksDescendants"
                android:minHeight="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_item_order_center_sgwp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_item_order_center_price1"
                        android:gravity="end"
                        android:textColor="#CE4A41"
                        android:textSize="13sp"
                        android:text="￥49.90"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_item_order_center_num1"
                        android:gravity="end"
                        android:textSize="10sp"
                        android:text="共3件"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_item_order_center_nyf"
                        android:textColor="@color/black3"
                        android:gravity="end"
                        android:textSize="10sp"
                        android:text="(免运费)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/tv_item_order_center_price_stutas"
                    android:text="待付款："
                    android:textColor="@color/black3"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_order_center_dfk"
                    android:text="￥9.9"
                    android:textColor="#CE4A41"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_item_order_center_delete"
                    android:textColor="#CE4A41"
                    android:text="删除订单"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="end"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_cancel"
                            android:background="@drawable/gray_line_background"
                            android:text="取消订单"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_ticket"
                            android:background="@drawable/gray_line_background"
                            android:text="申请开票"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_refund"
                            android:background="@drawable/gray_line_background"
                            android:text="申请售后"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/><!--申请退款-->
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_again"
                            android:background="@drawable/gray_line_background"
                            android:text="再次购买"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_logistics"
                            android:background="@drawable/gray_line_background"
                            android:text="查看物流"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_update"
                            android:background="@drawable/gray_line_background"
                            android:text="修改地址"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_continue"
                            android:textColor="#CE4A41"
                            android:background="@drawable/line_background_round_red"
                            android:text="继续付款"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_affirm"
                            android:textColor="#CE4A41"
                            android:background="@drawable/line_background_round_red"
                            android:text="确认收货"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_item_order_center_appraise"
                            android:textColor="#CE4A41"
                            android:background="@drawable/line_background_round_red"
                            android:text="评价"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>


    </LinearLayout>
</LinearLayout>