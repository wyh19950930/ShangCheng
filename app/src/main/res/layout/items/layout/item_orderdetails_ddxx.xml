<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_orderdetails_ddxx"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_orderdetails_ddxx_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="卡黄山店农家乐BBQ烧"
                android:textColor="#333333"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_item_orderdetails_ddxx_hx"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/shi_background_red"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="未核销"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_orderdetails_ddxx_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="￥0.01"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_orderdetails_ddxx_lx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="适用门店"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="25dp"
        />
    <ImageView
        android:id="@+id/iv_item_orderdetails_ddxx_lx"
        android:layout_marginLeft="5dp"
        android:src="@drawable/back_right_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"/>



</LinearLayout>