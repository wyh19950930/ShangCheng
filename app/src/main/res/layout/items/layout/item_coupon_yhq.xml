<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#F3F5FA"
        android:layout_width="wrap_content"
        android:layout_height="116.5dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="96.5dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="92.5dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_item_coupon_yhq_price"
                    android:textSize="22.5dp"
                    android:textColor="#CE4A41"
                    android:text="￥12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_coupon_yhq_tj1"
                    android:layout_marginTop="2dp"
                    android:textColor="#CE4A41"
                    android:text="满29元可用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:background="@drawable/xu_line_gray"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginLeft="21dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_item_coupon_yhq_tj2"
                    android:textColor="@color/black3"
                    android:textSize="16sp"
                    android:text="新人专享"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_coupon_yhq_tj3"
                    android:layout_marginTop="3dp"
                    android:textColor="#666666"
                    android:text="仅限与客户端/微信使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_coupon_yhq_tj4"
                    android:layout_marginTop="3dp"
                    android:textColor="#999999"
                    android:text="0天14是25分后过期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_item_coupon_yhq_ysy"
                android:src="@drawable/icon_ysy"
                android:layout_width="75dp"
                android:layout_height="75dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_item_coupon_yhq_ygq"
                android:src="@drawable/icon_ygq"
                android:layout_width="75dp"
                android:layout_height="75dp"/>
            <LinearLayout
                android:id="@+id/ll_item_coupon_yhq_ljsy"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_item_coupon_new"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_coupon_ljsy"
                    android:paddingBottom="3.5dp"
                    android:paddingTop="3.5dp"
                    android:paddingRight="11.5dp"
                    android:paddingLeft="11.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shi_background_yuan_red"
                    android:textColor="@color/white"
                    android:text="立即使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!--<ImageView
                android:id="@+id/iv_item_coupon_yhq_yuan"
                android:layout_marginRight="15dp"
                android:src="@drawable/yuan_kong_gray"
                android:layout_width="20dp"
                android:layout_height="20dp"/>-->

        </LinearLayout>
        <ImageView
            android:layout_marginLeft="92.5dp"
            android:src="@drawable/ic_shixin_round"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="92.5dp"
            android:src="@drawable/ic_shixin_round"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>


</LinearLayout>