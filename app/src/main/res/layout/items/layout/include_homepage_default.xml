<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_homepage_default_search"
        android:background="@drawable/bt_actiive_hui"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="35dp">
        <TextView
            android:textSize="13sp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/search"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:hint="请输入商品搜索"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner_homepage_default"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:image_scale_type="fit_xy"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

            </com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_homepage_default_qb"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/homepage_qb_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="#333333"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/tv_homepage_default_xs"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="乡食"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_xs_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_xj"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="乡居"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_xj_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_xy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="乡游"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_xy_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_xh"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="乡货"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_xh_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_homepage_default_nyty"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="农业体验"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_nyty_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_qzyx"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="亲子研学"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_qzyx_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_ydjk"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="运动健康"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_ydjk_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_swtz"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="商务拓展"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_swtz_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/tv_homepage_default_kcp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="卡产品"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:drawableTop="@drawable/homepage_kcp_icon"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门推荐"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="更多"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/back_right_icon"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_homepage_default_rmtj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为你优选"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#999999"
                    />
            </LinearLayout>

            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_homepage_default_wnyx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡产品"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#999999"
                    />
            </LinearLayout>

            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlv_homepage_default_kcp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>