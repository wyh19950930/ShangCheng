<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_item_shou_search_cplb_img"
            android:src="@drawable/icon_cnxh_ys"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:id="@+id/tv_item_shou_search_cplb_title"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="坡峰岭红叶节"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_shou_search_cplb_jl"
                    android:textSize="11sp"
                    android:text="37km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_item_shou_search_cplb_ys"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:text="已售0份"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<!--            评分-->
            <LinearLayout
                android:id="@+id/ll_item_shou_search_cplb_score"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:progressDrawable="@drawable/barcolor"
                        android:layout_centerVertical="true"
                        android:id="@+id/clpb_item_shou_search_cplb"
                        android:layout_width="50dp"
                        android:layout_height="11dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_gravity="center_vertical"
                        android:max="50"
                        android:progress="38" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:padding="1dp"
                            android:src="@drawable/star"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:padding="1dp"
                            android:src="@drawable/star"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:padding="1dp"
                            android:src="@drawable/star"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:padding="1dp"
                            android:src="@drawable/star"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:padding="1dp"
                            android:src="@drawable/star"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_item_shou_search_cplb_fs"
                    android:layout_marginLeft="5dp"
                    android:textColor="#F99E32"
                    android:text="3.8分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#CE4A41"
                    android:text="￥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_item_shou_search_cplb_price"
                    android:layout_weight="1"
                    android:textSize="22.5sp"
                    android:textColor="#CE4A41"
                    android:text="80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/icon_gwc"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>