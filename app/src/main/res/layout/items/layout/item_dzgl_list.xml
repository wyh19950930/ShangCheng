<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_dzgl_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡文华"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_item_dzgl_list_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15810123412"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/tv_item_dzgl_list_mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginLeft="8dp"
                android:text="默认"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:background="@drawable/bt_actiive_ce4a41"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_dzgl_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市北京市大兴区奥宇大厦"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#666666"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_dzgl_list_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawableLeft="@drawable/dz_bj_icon"
                android:text="编辑"
                android:textSize="13sp"
                android:textColor="#666666"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_item_dzgl_list_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/dz_det_icon"
                android:text="删除"
                android:textSize="13sp"
                android:textColor="#666666"
                android:drawablePadding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F3F5FA"/>



</LinearLayout>