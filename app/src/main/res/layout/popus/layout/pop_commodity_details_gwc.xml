<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bt_actiive_top_round_white"
    android:orientation="vertical">


    <View
        android:layout_width="1000dp"
        android:layout_height="1dp"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="15dp"
                    android:text="参数选择"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <ImageView
                    android:id="@+id/iv_pop_com_del_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="13dp"
                    android:src="@drawable/sqxq_close_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pop_com_del_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/sqxq_kf_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textSize="15sp"
                            android:textColor="#F6321A"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_pop_com_del_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="9.9"
                            android:textSize="25sp"
                            android:textColor="#F6321A"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_pop_com_del_originalprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="原价：￥29.9"
                            android:textSize="14sp"
                            android:textColor="#999999"/>
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_pop_com_del_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_actiive_ce4a41"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="团购享折扣"
                        android:textSize="11sp"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:id="@+id/tv_pop_com_del_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="剩余99件"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                    <TextView
                        android:id="@+id/tv_pop_com_del_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="已选：黄山店油鸡蛋2斤实惠装"
                        android:textSize="13sp"
                        android:textColor="#333333"/>
                </LinearLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pop_com_det_fl_rlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="36dp"
                    />
                
                <TextView
                    android:id="@+id/tv_pop_com_det_del"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt_actiive_sl_delete"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="一"/>
                <TextView
                    android:id="@+id/tv_pop_com_det_num"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt_actiive_sl"
                    android:gravity="center"
                    android:text="1"/>
                <TextView
                    android:id="@+id/tv_pop_com_det_add"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/bt_actiive_sl_add"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="十"/>

                
            </LinearLayout>

            <Button
                android:id="@+id/bt_pop_com_det_determine"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_actiive_determine"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





</LinearLayout>