<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    >
<!--    android:layout_margin="10dp"-->
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_pop_point_tjfx_title"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="优惠券"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_pop_ddqr_yhq_close"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cha_czlb"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
<!--    app:maxHeight="450dp"-->
    <com.jymj.zhglxt.widget.SizeLimitView
        android:background="#F3F5FA"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/rlv_pop_ddqr_yhq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </com.jymj.zhglxt.widget.SizeLimitView>
<LinearLayout
    android:background="@color/white"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/iv_pop_ddqr_yhq_sure"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="7.5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="47.5dp"
        android:layout_marginLeft="47.5dp"
        android:background="@drawable/shi_background_yuan_red"
        android:text="确定"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
</LinearLayout>